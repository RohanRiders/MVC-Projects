
@using NewsletterAppMVC.ViewModels
@model List<SignupVm>

<div class="row no-gutters m-3">
    <div class="card colm-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            <!--Remember you reference your List<NewsletterSignUp> with the word Model,
            but because we are using a ViewModel we reference SignupVm to filter data we send back.-->
            @foreach (var signup in Model)
            {
                using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@signup.Id" />
            <div class="row mb-3">
                <!--With out specifying the column number they share a total of 12 columns. We are going to specify to help with the layout on the page.-->
                <!--NOTE: This column will have two columns-->
                <div class="col-2">
                    @signup.FirstName
                </div>
                <!--NOTE: This column will have three columns-->
                <div class="col">
                    @signup.LastName
                </div>
                <!--NOTE: This column will have four columns-->
                <div class="col-4">
                    @signup.EmailAddress
                </div>
                <!--NOTE: This column will have three columns-->
                <div class="col">
                    <button type="submit" class="btn btn-danger btn-block">
                        Unsubscribe
                    </button>
                </div>
            </div>
                }
                
            }

        </div>
    </div>
</div>